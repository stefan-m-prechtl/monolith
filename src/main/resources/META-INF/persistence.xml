<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="workflowdb" transaction-type="JTA">
		<jta-data-source>jdbc/__MySQL8Workflow</jta-data-source>
		 <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.logging.level.sql" value="INFO" />
        </properties>
	</persistence-unit>
	
	<persistence-unit name="itemdb" transaction-type="JTA">
		<jta-data-source>jdbc/__MySQL8Item</jta-data-source>
		 <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.logging.level.sql" value="INFO" />
        </properties>
	</persistence-unit>
	
	<persistence-unit name="projectdb" transaction-type="JTA">
		<jta-data-source>jdbc/__MySQL8Role</jta-data-source>
		 <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.logging.level.sql" value="INFO" />
        </properties>
	</persistence-unit>
	
	<persistence-unit name="roledb" transaction-type="JTA">
		<jta-data-source>jdbc/__MySQL8Role</jta-data-source>
		 <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.logging.level.sql" value="INFO" />
        </properties>
	</persistence-unit>
	
	<persistence-unit name="userdb" transaction-type="JTA">
		<jta-data-source>jdbc/__MySQL8User</jta-data-source>
		 <properties>
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.logging.level.sql" value="INFO" />
        </properties>
	</persistence-unit>
	
	
</persistence>